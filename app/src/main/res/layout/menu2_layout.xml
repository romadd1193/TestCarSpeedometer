<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LinearLayout"
    android:id="@+id/menu2timer"
    android:background="#000000">

    <DigitalClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menu2digitalClock"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#32cd32"
        android:layout_gravity="right" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0:00:000"
        android:id="@+id/menu2timertxt"
        android:layout_gravity="center_horizontal"
        android:textColor="#32cd32"
        android:textSize="@dimen/abc_action_bar_default_height_material"
        android:paddingTop="20dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:text="Stop Timer"
        android:id="@+id/menu2stoptimerbutton"
        android:layout_gravity="center_horizontal"
        android:textColor="#32cd32"
        android:background="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView8"
        android:textColor="#32cd32"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textColor="#32cd32"
        android:id="@+id/textView9"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textColor="#32cd32"
        android:id="@+id/textView10"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0 MPH"
        android:id="@+id/menu2initial"
        android:paddingTop="30dp"
        android:paddingBottom="70dp"
        android:textColor="#32cd32"
        android:textStyle="bold"
        android:textSize="@dimen/abc_action_bar_default_height_material"
        android:layout_gravity="center_horizontal" />

    <ImageButton
        android:id="@+id/menu2imageButtonquarter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/qmtime"
        android:background="#000000"
        android:layout_gravity="center" />/>

    <ImageButton
        android:id="@+id/menu2imageButtonzsixty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/zerotosixty"
        android:background="#000000"
        android:layout_gravity="center" />/>
        />

</LinearLayout>